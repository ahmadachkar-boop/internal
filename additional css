/* 1) Hoist modal root above site chrome (still useful on desktop) */
.ride-modal-root { position: relative !important; z-index: 2147483600 !important; isolation: isolate; }

/* 2) Checkbox (kept for label close) */
#ride-modal-toggle {
  position: absolute; width: 1px; height: 1px; overflow: hidden;
  clip: rect(0 0 0 0); white-space: nowrap; clip-path: inset(50%);
  border: 0; padding: 0; margin: -1px;
}

/* 3) Overlay + modal containers */
.ride-modal-overlay,
.ride-modal { position: fixed; inset: 0; display: none; z-index:  ; }

/* 4) Show when checked */
.ride-modal-root #ride-modal-toggle:checked ~ .ride-modal-overlay,
.ride-modal-root #ride-modal-toggle:checked ~ .ride-modal { display: block !important; }

/* 5) Overlay (click-to-close; desktop dim—mobile guaranteed by body::before) */
.ride-modal-overlay { cursor: pointer; background: rgba(0,0,0,0.6); pointer-events: auto; z-index: 2 !important; }

/* 6) Optional extra blur behind on desktop via ::before */
.ride-modal { position: fixed; }
.ride-modal::before {
  content: "";
  position: fixed; inset: 0;
  background: rgba(0,0,0,0.5);
  -webkit-backdrop-filter: blur(6px);
  backdrop-filter: blur(6px);
  z-index: 1; pointer-events: none;
}
@supports (-webkit-touch-callout: none) { .ride-modal::before { display: none !important; } }

