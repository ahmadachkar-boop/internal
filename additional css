/* === HOW IT WORKS — guaranteed visible shadows (Avada-proof) === */

/* 1) Make sure nothing clips the shadow */
.how-it-works,
.how-it-works * { overflow: visible !important; }


  /* normal shadow (if not clipped) */
  box-shadow: 0 14px 34px -18px rgba(0,0,0,.30),
              0 2px 8px -4px rgba(0,0,0,.10) !important;

  /* paint-time shadow that ignores overflow clipping */
  filter: drop-shadow(0 12px 24px rgba(0,0,0,.20)) !important;
}

/* 3) Extra pseudo-layer under the card as a fallback shadow */
.how-it-works .hiw-steps > li > .hiw-step::after{
  content: "";
  position: absolute;
  inset: -2px;                        /* slightly bigger than the card */
  border-radius: inherit;
  z-index: -1;
  pointer-events: none;
  box-shadow: 0 22px 40px -20px rgba(0,0,0,.30);
}

/* 4) Hover pop */
.how-it-works .hiw-steps > li > .hiw-step:hover{
  transform: translateY(-2px);
  box-shadow: 0 20px 44px -22px rgba(0,0,0,.32),
              0 6px 14px -6px rgba(0,0,0,.14) !important;
  filter: drop-shadow(0 14px 28px rgba(0,0,0,.22)) !important;
}

/* 5) If your theme wraps the section with hidden overflow, unclip it */
.fusion-body .how-it-works,
.fusion-body .how-it-works .fusion-row,
.fusion-body .how-it-works .fusion-column-wrapper{
  overflow: visible !important;
}



