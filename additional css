.ride-modal__panel {
  position: fixed; inset: 0;
  display: flex; align-items: center; justify-content: center;
  padding: 16px;
  overflow: auto;
  pointer-events: none;
  z-index: 3 !important;
  font-family: inherit;
  -webkit-transform: translateZ(0); transform: translateZ(0);
}

