/* HALLOWEEN SPRINKLES — styles */
.hall-sprinkle {
  position: fixed;
  width: 28px; height: 28px;
  pointer-events: none;
  z-index: 3;            /* above bg, below modals */
  opacity: .92;
  animation: hall-float var(--dur, 8s) ease-in-out infinite;
  will-change: transform;
  filter: drop-shadow(0 2px 4px rgba(0,0,0,.35));
}
.hall-sprinkle.small { width: 22px; height: 22px; opacity: .9; }
.hall-sprinkle.tiny  { width: 18px; height: 18px; opacity: .85; }
.hall-sprinkle.web   { width: 56px; height: 56px; opacity: .75; }

@keyframes hall-float {
  0%,100% { transform: translate3d(0,0,0) rotate(var(--rot, 0deg)); }
  50%     { transform: translate3d(0, calc(-1 * var(--amp, 8px)), 0) rotate(calc(var(--rot, 0deg) * -1)); }
}

/* light random drifting so they don’t all move together */
.hall-sprinkle:nth-child(3n)  { --dur: 7.2s; --amp: 7px;  }
.hall-sprinkle:nth-child(4n)  { --dur: 9.6s; --amp: 9px;  }
.hall-sprinkle:nth-child(5n)  { --dur: 11s;  --amp: 12px; }
.hall-sprinkle:nth-child(7n)  { --dur: 6.6s; --amp: 6px;  }

/* respect reduced motion */
@media (prefers-reduced-motion: reduce){
  .hall-sprinkle { animation: none !important; }
}

/* keep edges tidy on mobile */
@media (max-width: 700px){
  .hall-sprinkle.web { display: none; }
}








